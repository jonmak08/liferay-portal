		<run-batch-test>
			<test-action>
				<ant dir="portal-web" target="compile-tomcat" />
			</test-action>

			<test-set-up>
				<if>
					<isset property="env.DIST_PATH" />
					<then>
						<prepare-test-environment />
					</then>
					<else>
						<prepare-test-build />
					</else>
				</if>
			</test-set-up>
		</run-batch-test>
