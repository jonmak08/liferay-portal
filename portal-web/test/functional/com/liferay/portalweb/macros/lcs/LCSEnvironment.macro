<definition>
	<command name="addEnvironment">
		<execute function="Type" locator1="LCSEnvironmentAdd#NAME_FIELD" value1="${environmentName}" />
		<execute function="Type" locator1="LCSEnvironmentAdd#DESCRIPTION_FIELD" value1="${environmentDescription}" />
		<execute function="Type" locator1="LCSEnvironmentAdd#LOCATION_FIELD" value1="${environmentLocation}" />

		<execute function="Click" locator1="LCSEnvironmentAdd#CREATE_BUTTON" />

		<execute function="AssertTextEquals" locator1="LCSEnvironmentAdd#SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="tearDown">
		<while>
			<condition function="IsElementPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_GENERIC" />
			<then>
				<execute function="Click" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_GENERIC" />

				<execute function="AssertClickNoError" locator1="LCSEnvironment#DELETE_BUTTON" value1="Delete" />

				<execute function="Confirm" value1="Are you sure you want to delete this environment?" />

				<execute function="Click" locator1="LCSPortalNavigation#NAVIGATION_MENU_DASHBOARD" />
			</then>
		</while>
	</command>

	<command name="viewConnectedEnvironmentIcon">
		<var name="key_environmentName" value="${environmentName}" />

		<if>
			<equals arg1="${clusterEnabled}" arg2="true" />
			<then>
				<execute function="AssertElementPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_CLUSTER_ONLINE_ICON" />
			</then>
			<else>
				<execute function="AssertElementPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_ONLINE_ICON" />
			</else>
		</if>
	</command>

	<command name="viewDisconnectedEnvironmentIcon">
		<var name="key_environmentName" value="${environmentName}" />

		<if>
			<equals arg1="${clusterEnabled}" arg2="true" />
			<then>
				<execute function="AssertElementPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_CLUSTER_OFFLINE_ICON" />
			</then>
			<else>
				<execute function="AssertElementPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT_OFFLINE_ICON" />
			</else>
		</if>
	</command>

	<command name="viewEmptyEnvironment">
		<var name="key_environmentName" value="${environmentName}" />

		<execute function="AssertTextEquals" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT" value1="${environmentName}" />
		<execute function="AssertTextEquals" locator1="LCSEnvironment#ALERT_MESSAGE" value1="There are no servers in this environment. Please install Liferay Connected Services Client on the servers you wish to add to this environment and complete the registration process." />
		<execute function="AssertElementNotPresent" locator1="LCSPortalNavigation#NAVIGATION_MENU_SERVER_GENERIC" />
	</command>

	<command name="viewEnvironmentDetails">
		<var name="key_environmentName" value="${environmentName}" />

		<execute function="AssertTextEquals" locator1="LCSPortalNavigation#NAVIGATION_MENU_ENVIRONMENT" value1="${environmentName}" />
		<execute function="AssertTextEquals" locator1="LCSEnvironment#ENVIRONMENT_NAME" value1="${environmentName}" />
		<execute function="AssertTextEquals" locator1="LCSEnvironment#ENVIRONMENT_DESCRIPTION" value1="${environmentDescription}" />
		<execute function="AssertTextEquals" locator1="LCSEnvironment#ENVIRONMENT_LOCATION" value1="${environmentLocation}" />

		<if>
			<equals arg1="${serverClusterEnabled}" arg2="true" />
			<then>
				<execute function="AssertTextEquals" locator1="LCSEnvironment#ENVIRONMENT_TYPE" value1="Cluster" />
			</then>
		</if>
	</command>
</definition>