<definition>
	<command name="checkRuleNotification">
		<var name="key_notificationRule" value="${notificationRule}" />

		<execute function="Check" locator1="LCSNotificationsRule#NOTIFICATION_RULE_CHECKBOX" value1="${notificationRule}" />
	</command>

	<command name="selectRuleScope">
		<execute function="Select" locator1="LCSNotificationsRule#PROJECT_SELECT" value1="${projectName}" />
		<execute function="Select" locator1="LCSNotificationsRule#ENVIRONMENT_SELECT" value1="${environmentName}" />
		<execute function="Select" locator1="LCSNotificationsRule#SERVER_SELECT" value1="${serverName}" />
	</command>

	<command name="tearDown">
		<while>
			<condition function="IsElementPresent" locator1="NOTIFICATION_TABLE_RULE_ACTIONS_BUTTON_GENERAL" />
			<then>
				<execute function="AssertClick" locator1="LCSNotifications#NOTIFICATION_TABLE_RULE_ACTIONS_BUTTON_GENERAL" value1="Actions" />

				<execute function="AssertClickNoError" locator1="LCSNotifications#ACTIONS_MENU_DELETE" value1="Delete" />

				<execute function="Confirm" value1="Are you sure you want to delete notifications rule?" />

				<execute function="AssertTextEquals" locator1="LCSNotifications#NOTIFICATIONS_ALERT_SUCCESS" value1="Your request completed successfully." />
			</then>
		</while>
	</command>

	<command name="uncheckRuleNotification">
		<var name="key_notificationRule" value="${notificationRule}" />

		<execute function="Uncheck" locator1="LCSNotificationsRule#NOTIFICATION_RULE_CHECKBOX" value1="${notificationRule}" />
	</command>

	<command name="viewRuleNotificationChecked">
		<var name="key_notificationRule" value="${notificationRule}" />

		<execute function="AssertChecked" locator1="LCSNotificationsRule#NOTIFICATION_RULE_CHECKBOX" value1="${notificationRule}" />
	</command>

	<command name="viewRuleNotificationsTable">
		<var name="key_environmentName" value="${environmentName}" />
		<var name="key_projectName" value="${projectName}" />
		<var name="key_serverName" value="${serverName}" />

		<execute function="AssertTextEquals" locator1="LCSNotifications#NOTIFICATION_TABLE_RULE_PROJECT_NAME" value1="${projectName}" />
		<execute function="AssertTextEquals" locator1="LCSNotifications#NOTIFICATION_TABLE_RULE_ENVIRONMENT_NAME" value1="${environmentName}" />
		<execute function="AssertTextEquals" locator1="LCSNotifications#NOTIFICATION_TABLE_RULE_SERVER_NAME" value1="${serverName}" />
	</command>

	<command name="viewRuleNotificationUnchecked">
		<var name="key_notificationRule" value="${notificationRule}" />

		<execute function="AssertNotChecked" locator1="LCSNotificationsRule#NOTIFICATION_RULE_CHECKBOX" value1="${notificationRule}" />
	</command>

	<command name="viewRuleScope">
		<execute function="AssertTextEquals" locator1="LCSNotificationsRule#PROJECT_NAME" value1="${projectName}" />
		<execute function="AssertTextEquals" locator1="LCSNotificationsRule#ENVIRONMENT_NAME" value1="${environmentName}" />
		<execute function="AssertTextEquals" locator1="LCSNotificationsRule#SERVER_NAME" value1="${serverName}" />
	</command>
</definition>