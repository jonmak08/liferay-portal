<definition>
	<command name="connectToLCSPortal">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Liferay Connected Services" />
		</execute>

		<execute macro="LCSPortlet#authorizeLCS">
			<var name="projectName" value="${projectName}" />
			<var name="userEmailAddress" value="${userEmailAddress}" />
			<var name="userEmailPassword" value="${userEmailPassword}" />
		</execute>

		<execute macro="LCSPortlet#registerServer">
			<var name="addEnvironment" value="${addEnvironment}" />
			<var name="environmentDescription" value="${environmentDescription}" />
			<var name="environmentLocation" value="${environmentLocation}" />
			<var name="environmentName" value="${environmentName}" />
			<var name="projectName" value="${projectName}" />
			<var name="registerAllClusterNodes" value="${registerAllClusterNodes}" />
			<var name="serverDescription" value="${serverDescription}" />
			<var name="serverLocation" value="${serverLocation}" />
			<var name="serverName" value="${serverName}" />
		</execute>

		<execute macro="LCSPortlet#viewRegisteredServer">
			<var name="environmentName" value="${environmentName}" />
			<var name="projectName" value="${projectName}" />
			<var name="serverClusterEnabled" value="${serverClusterEnabled}" />
			<var name="serverConnectionStatus" value="Connected" />
			<var name="serverDescription" value="${serverDescription}" />
			<var name="serverLocation" value="${serverLocation}" />
			<var name="serverName" value="${serverName}" />
		</execute>

		<execute macro="LCSPortletNavigator#gotoProjectHome">
			<var name="loginRequired" value="${loginRequired}" />
			<var name="projectName" value="${projectName}" />
			<var name="userEmailAddress" value="${userEmailAddress}" />
			<var name="userEmailPassword" value="${userEmailPassword}" />
		</execute>
	</command>
</definition>