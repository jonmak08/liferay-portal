<definition>
	<command name="gotoServer">
		<execute macro="LCSEnvironmentNavigator#gotoEnvironment">
			<var name="environmentName" value="${environmentName}" />
		</execute>

		<var name="key_serverName" value="${serverName}" />

		<execute function="AssertClick#assertPartialTextClickAt" locator1="LCSPortalNavigation#NAVIGATION_MENU_SERVER" value1="${serverName}" />
	</command>

	<command name="gotoServerDetails">
		<execute macro="LCSServerNavigator#gotoServer">
			<var name="environmentName" value="${environmentName}" />
			<var name="serverName" value="${serverName}" />
		</execute>

		<execute function="AssertClick" locator1="LCSServer#TOOLBAR_SERVER_DETAILS_BUTTON" value1="Server Details" />
	</command>

	<command name="gotoServerMetrics">
		<execute macro="LCSServerNavigator#gotoServer">
			<var name="environmentName" value="${environmentName}" />
			<var name="serverName" value="${serverName}" />
		</execute>

		<execute function="AssertClick" locator1="LCSServer#TOOLBAR_METRICS_BUTTON" value1="Metrics" />

		<if>
			<isset var="metricsTabName" />
			<then>
				<execute macro="LCSServerMetricsNavigator#gotoDefaultTab">
					<var name="metricsTabName" value="${metricsTabName}" />
				</execute>
			</then>
		</if>

		<if>
			<isset var="metricsSubTabName" />
			<then>
				<execute macro="LCSServerMetricsNavigator#gotoSubTab">
					<var name="metricsSubTabName" value="${metricsSubTabName}" />
				</execute>
			</then>
		</if>
	</command>

	<command name="gotoServerProperties">
		<execute macro="LCSServerNavigator#gotoServer">
			<var name="environmentName" value="${environmentName}" />
			<var name="serverName" value="${serverName}" />
		</execute>

		<execute function="AssertClick" locator1="LCSServer#TOOLBAR_SERVER_DETAILS_BUTTON" value1="Server Details" />

		<execute function="AssertClick" locator1="LCSServerServerDetails#NAVIGATION_SERVER_PROPERTIES" value1="Server Properties" />
	</command>
</definition>