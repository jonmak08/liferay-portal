<definition>
	<command name="gotoEnvironment">
		<execute function="AssertClick" locator1="LCSPortlet#ENVIRONMENT_LINK" value1="${environmentName} (Opens New Window)" />

		<if>
			<equals arg1="${loginRequired}" arg2="true" />
			<then>
				<execute function="SelectWindow" locator1="Liferay - Welcome" />

				<execute function="Type" locator1="LRDCOMLogin#EMAIL_ADDRESS_FIELD" value1="${userEmailAddress}" />
				<execute function="Type" locator1="LRDCOMLogin#PASSWORD_FIELD" value1="${userEmailPassword}" />

				<execute function="AssertClickNoError" locator1="LRDCOMLogin#SIGN_IN_BUTTON" value1="Sign In" />

				<execute function="Confirm#assertPartialConfirmation" value1="Are you sure you want to continue sending this information?" />
			</then>
			<else>
				<execute function="SelectWindow" locator1="Dashboard - Liferay" />
			</else>
		</if>
	</command>

