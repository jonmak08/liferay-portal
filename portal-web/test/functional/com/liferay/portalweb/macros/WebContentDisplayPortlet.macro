<definition>
	<command name="configureScopePG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />
		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#NAVIGATION_SCOPE" value1="Scope" />

		<var name="key_scopeSelection" value="${scopeSelection}" />

		<execute function="#click" locator1="PGWebcontentdisplayConfigurationScope#SCOPE_MENULIST" />
		<execute function="#assertClick" locator1="PGWebcontentdisplayConfigurationScope#SCOPE_MENULIST_SELECTION" value1="${scopeSelection}" />

		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfigurationScope#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfigurationScope#SCOPE_MENULIST" value1="${scopeSelection}" />
	</command>

	<command name="configureSetupPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />

		<if>
			<equals arg1="${wcdPortletShowAvailableLocales}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#SHOW_AVAILABLE_LOCALES_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletShowAvailableLocales}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#SHOW_AVAILABLE_LOCALES_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnablePrint}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_PRINT_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnablePrint}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_PRINT_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableRelatedAssets}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_RELATED_ASSETS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableRelatedAssets}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_RELATED_ASSETS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableRatings}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_RATINGS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableRatings}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_RATINGS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableComments}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENTS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableComments}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENTS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableCommentRatings}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENT_RATINGS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableCommentRatings}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENT_RATINGS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableViewCountIncrement}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGWebcontentdisplayConfiguration#ENABLE_VIEW_COUNT_INCREMENT_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableViewCountIncrement}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGWebcontentdisplayConfiguration#ENABLE_VIEW_COUNT_INCREMENT_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfigurationScope#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />

		<if>
			<equals arg1="${wcdPortletShowAvailableLocales}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#SHOW_AVAILABLE_LOCALES_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletShowAvailableLocales}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#SHOW_AVAILABLE_LOCALES_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnablePrint}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_PRINT_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnablePrint}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_PRINT_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableRelatedAssets}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_RELATED_ASSETS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableRelatedAssets}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_RELATED_ASSETS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableRatings}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_RATINGS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableRatings}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_RATINGS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableComments}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENTS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableComments}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENTS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableCommentRatings}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENT_RATINGS_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableCommentRatings}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_COMMENT_RATINGS_CHECKBOX" />
				</then>
			</elseif>
		</if>

		<if>
			<equals arg1="${wcdPortletEnableViewCountIncrement}" arg2="true" />
			<then>
				<execute function="#assertChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_VIEW_COUNT_INCREMENT_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${wcdPortletEnableViewCountIncrement}" arg2="false" />
				<then>
					<execute function="#assertNotChecked" locator1="PGWebcontentdisplayConfiguration#ENABLE_VIEW_COUNT_INCREMENT_CHECKBOX" />
				</then>
			</elseif>
		</if>
	</command>

	<command name="searchWebContent">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />

		<if>
			<isset var="webContentSearchValue" />
			<then>
				<execute function="#type" locator1="PGWebcontentdisplayConfiguration#SEARCH_FIELD" value1="${webContentSearchValue}" />
			</then>
			<else>
				<execute function="#type" locator1="PGWebcontentdisplayConfiguration#SEARCH_FIELD" value1="${webContentTitle}" />
			</else>
		</if>

		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#SEARCH_BUTTON" value1="Search" />

		<var name="key_webContentTitle" value="${webContentTitle}" />

		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfiguration#WEB_CONTENT_TABLE_TITLE" value1="${webContentTitle}" />

		<if>
			<equals arg1="${addSearchedContent}" arg2="true" />
			<then>
				<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#WEB_CONTENT_TABLE_TITLE" value1="${webContentTitle}" />
				<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfiguration#INFO_MESSAGE_ARTICLE" value1="${webContentTitle} (Modified)" />
				<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#SAVE_BUTTON" value1="Save" />
				<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfiguration#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
			</then>
		</if>

		<execute action="PGWebcontentdisplayConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="searchWebContentNo">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />

		<execute function="#type" locator1="PGWebcontentdisplayConfiguration#SEARCH_FIELD" value1="${webContentTitle}" />
		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#SEARCH_BUTTON" value1="Search" />

		<var name="key_webContentTitle" value="${webContentTitle}" />

		<execute function="#assertElementNotPresent" locator1="PGWebcontentdisplayConfiguration#WEB_CONTENT_TABLE_TITLE" value1="${webContentTitle}" />
		<execute action="PGWebcontentdisplayConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="selectWebContent">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />

		<var name="key_webContentTitle" value="${webContentTitle}" />

		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#WEB_CONTENT_TABLE_TITLE" value1="${webContentTitle}" />
		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfiguration#INFO_MESSAGE_ARTICLE" value1="${webContentTitle} (Modified)" />
		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfiguration#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGWebcontentdisplayConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="tearDownScopePG">
		<execute macro="WebContentDisplayPortlet#configureScopePG">
			<var name="scopeSelection" value="Liferay" />
		</execute>
	</command>

	<command name="viewConfigureScopePG">
		<if>
			<equals arg1="${scopeSelectionDefault}" arg2="true" />
			<then>
				<execute function="#assertTextEquals" locator1="PGWebcontentdisplay#TITLE" value1="Web Content Display" />
			</then>
			<else>
				<execute function="#assertTextEquals" locator1="PGWebcontentdisplay#TITLE" value1="Web Content Display (${scopeSelection})" />
			</else>
		</if>

		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute function="#selectFrame" locator1="PGWebcontentdisplayConfiguration#CONFIGURATION_IFRAME" />
		<execute function="#assertClick" locator1="PGWebcontentdisplayConfiguration#NAVIGATION_SCOPE" value1="Scope" />
		<execute function="#assertTextEquals" locator1="PGWebcontentdisplayConfigurationScope#SCOPE_MENULIST" value1="${scopeSelection}" />
	</command>
</definition>