<definition>
	<command name="deleteCP">
		<var name="key_assetName" value="${assetName}" />

		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_NAME" value1="${assetName}" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_TYPE" value1="${assetType}" />
		<execute function="#assertClick" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_ACTIONS" value1="Actions" />
		<execute function="#assertClickNoError" locator1="CPRecyclebin#RECYCLE_BIN_MENULIST_DELETE" value1="Delete" />
		<execute function="#confirm" locator1="CPRecyclebin#CONFIRMATION" value1="Are you sure you want to delete this? It will be deleted immediately." />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#INFO_MESSAGE" value1="The Recycle Bin is empty." />
		<execute action="CPRecyclebin#assertTextNotPresent" value1="${assetName}" />
	</command>

	<command name="emptyCP">
		<if>
			<condition function="#isElementPresent" locator1="CPRecyclebin#EMPTY_RECYCLE_BIN" />
			<then>
				<execute function="#assertClickNoError" locator1="CPRecyclebin#EMPTY_RECYCLE_BIN" value1="Empty the Recycle Bin" />
				<execute function="#confirm" locator1="CPRecyclebin#CONFIRMATION" value1="Are you sure you want to empty the Recycle Bin?" />
			</then>
		</if>
	</command>

	<command name="restoreCP">
		<var name="key_assetName" value="${assetName}" />

		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_NAME" value1="${assetName}" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_TYPE" value1="${assetType}" />
		<execute function="#assertClick" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_ACTIONS" value1="Actions" />
		<execute function="#assertClick" locator1="CPRecyclebin#RECYCLE_BIN_MENULIST_RESTORE" value1="Restore" />

		<var name="key_assetType" value="${assetType}" />

		<execute function="#assertTextEquals" locator1="CPRecyclebin#SUCCESS_MESSAGE_CONTENT" value1="${assetType}" />

		<var name="key_assetRestoreLocation" value="${assetRestoreLocation}" />

		<execute function="#assertTextEquals" locator1="CPRecyclebin#SUCCESS_MESSAGE_RESTORE_LOCATION" value1="${assetRestoreLocation}" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#INFO_MESSAGE" value1="The Recycle Bin is empty." />
		<execute function="#assertElementNotPresent" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_NAME" />
	</command>

	<command name="viewCP">
		<var name="key_assetName" value="${assetName}" />

		<execute function="#assertTextEquals" locator1="CPRecyclebin#SUCCESS_MESSAGE_RECYCLE_BIN" value1="Entries that have been in the Recycle Bin for more than 1 month will be automatically deleted. Empty the Recycle Bin" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_NAME" value1="${assetName}" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_TYPE" value1="${assetType}" />
		<execute function="#assertElementPresent" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_REMOVED_DATE" />
		<execute function="#assertTextEquals" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_REMOVED_BY" value1="Test Test" />
		<execute function="#assertElementPresent" locator1="CPRecyclebin#RECYCLE_BIN_TABLE_ACTIONS" />
	</command>

	<command name="viewDefaultCP">
		<execute function="#assertTextEquals" locator1="CPRecyclebin#INFO_MESSAGE" value1="The Recycle Bin is empty." />
		<execute action="CPRecyclebin#assertTextNotPresent" value1="${assetName}" />
	</command>
</definition>