<definition>
	<command name="configureDisplaySettingsMaximumEntriesToDisplay">
		<var name="key_documentsPerPage" value="${documentsPerPage}" />

		<execute function="#selectFrame" locator1="PGDocumentlibraryConfiguration#DOCUMENT_LIBRARY_IFRAME" />
		<execute function="#select" locator1="PGDocumentlibraryConfiguration#DROPDOWN_SELECT_OPTION" value1="${documentsPerPage}" />
		<execute function="#assertClick" locator1="PGDocumentlibraryConfiguration#SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGDocumentlibraryConfiguration#SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGDocumentlibraryConfiguration#selectFrame" value1="relative=top" />
	</command>

	<command name="viewDefaultPG">
		<execute function="#assertTextEquals" locator1="PGDocumentsandmedia#PORTLET_TITLE" value1="Documents and Media" />
		<execute function="#assertTextEquals" locator1="PGDocumentsandmedia#INFO_MESSAGE" value1="There are no documents or media files in this folder." />
	</command>

	<command name="viewNoPermissionCP">
		<execute function="#assertTextEquals" locator1="CPDocumentsandmedia#PORTLET_TITLE" value1="Documents and Media" />
		<execute function="#assertTextEquals" locator1="CPDocumentsandmedia#INFO_MESSAGE" value1="There are no documents or media files in this folder." />
	</command>

	<command name="viewPaginationControlsPG">
		<execute function="#assertTextEquals" locator1="PGDocumentsandmedia#PAGINATION_NEXT" value1="Next" />
		<execute function="#assertTextEquals" locator1="PGDocumentsandmedia#PAGINATION_PREVIOUS" value1="Prev" />
	</command>
</definition>