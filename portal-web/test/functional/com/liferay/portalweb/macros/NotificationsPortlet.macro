<definition>
	<command name="gotoNotificationDelivery">
		<execute macro="Notifications#gotoDockbar" />

		<execute macro="Notifications#navigateToViewAllNotifications">
			<var name="notificationCount" value="${notificationCount}" />
		</execute>

		<execute function="#assertClick" locator1="PGNotifications#NAVIGATION_NOTIFICATION_DELIVERY" value1="Notification Delivery" />
	</command>

	<command name="setUserDeliveries">
		<var name="key_actionType" value="${actionType}" />
		<var name="key_contentType" value="${contentType}" />
		<var name="key_notificationType" value="${notificationType}" />

		<if>
			<equals arg1="${enableDelivery}" arg2="true" />
			<then>
				<execute function="#check" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX" />
			</then>
			<elseif>
				<equals arg1="${enableDelivery}" arg2="false" />
				<then>
					<execute function="#uncheck" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX" />
				</then>
			</elseif>
		</if>
	</command>

	<command name="tearDownUserDeliveries">
		<var name="actionList" value="adds,updates" />
		<var name="contentList" value="Wiki,Message Boards,Documents and Media,Bookmarks,Web Content,Blogs" />

		<execute macro="Page#openURL" />

		<execute macro="NotificationsPortlet#gotoNotificationDelivery" />

		<for list="${actionList}" param="actionType" >
			<var name="key_actionType" value="${actionType}" />

			<for list="${contentList}" param="contentType" >
				<var name="key_contentType" value="${contentType}" />
				<var name="key_notificationType" value="Website" />

				<execute function="#check" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX" />
			</for>
		</for>
	</command>

	<command name="viewDefaultNotificationDeliveries">
		<var name="key_contentType" value="Blogs" />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new blog entry in a blog you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a blog entry you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<var name="key_contentType" value="Bookmarks" />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new bookmark in a folder you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a bookmark you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<var name="key_contentType" value="Documents and Media " />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new document in a folder you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a document you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<var name="key_contentType" value="Message Boards" />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new post in a thread or category you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a post you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<var name="key_contentType" value="Web Content" />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new web content in a folder you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a web content you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<var name="key_contentType" value="Wiki" />

		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="adds a new wiki page in a wiki you are subscribed to." />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_2" value1="updates a wiki page you are subscribed to." />
		<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
		<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

		<if>
			<isset var="contactsPortletDeployed" />
			<then>
				<var name="key_contentType" value="Contacts Center" />

				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="sends you a social relationship request." />
				<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />
				<execute function="#assertVisible" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_DISABLED_1" />

				<var name="key_contentType" value="Invite Members" />

				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="sends you a membership request." />
				<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />
				<execute function="#assertVisible" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_DISABLED_1" />

				<var name="key_contentType" value="Microblogs" />

				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="comments on your microblog." />
				<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Website" />

				<var name="key_contentType" value="Private Messaging" />

				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_TEXT_1" value1="sends you a message." />
				<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_1" />
				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_1" value1="Email" />
				<execute function="#assertChecked" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_2" />
				<execute function="#assertTextEquals" locator1="PGNotificationsdelivery#NOTIFICATION_DELIVERY_CHECKBOX_LABEL_2" value1="Website" />
			</then>
		</if>
	</command>
</definition>