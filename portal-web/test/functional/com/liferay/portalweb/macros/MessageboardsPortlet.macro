<definition>
	<command name="configureGeneralPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGMessageboardsConfiguration#selectFrame" locator1="MESSAGE_BOARDS_IFRAME" />

		<if>
			<equals arg1="${threadAsQuestionByDefaultEnabled}" arg2="true" />
			<then>
				<execute action="PGMessageboardsConfigurationGeneral#check" locator1="THREAD_AS_QUESTION_BY_DEFAULT_CHECKBOX" />
			</then>
		</if>

		<if>
			<equals arg1="${messageFormatBBCodeEnabled}" arg2="true" />
			<then>
				<var name="key_messageFormat" value="${messageFormat}" />

				<execute action="PGMessageboardsConfigurationGeneral#select" locator1="MESSAGE_FORMAT_DROPDOWN_OPTION" value1="${key_messageFormat}" />
			</then>
		</if>

		<execute action="PGMessageboardsConfigurationGeneral#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="PGMessageboardsConfiguration#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
	</command>

	<command name="configureMessageAddedEmailPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGMessageboardsConfiguration#selectFrame" locator1="MESSAGE_BOARDS_IFRAME" />
		<execute action="PGMessageboardsConfiguration#assertClick" locator1="SETUP_NAVIGATION_MESSAGE_ADDED_EMAIL" value1="Message Added Email" />

		<if>
			<equals arg1="${messageAddedEmailEnabled}" arg2="false" />
			<then>
				<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#uncheck" locator1="MESSAGE_ADDED_EMAIL_ENABLED_CHECKBOX" />
			</then>
			<else>
				<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertChecked" locator1="MESSAGE_ADDED_EMAIL_ENABLED_CHECKBOX" />
			</else>
		</if>

		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
	</command>

	<command name="configureMessageUpdatedEmailPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGMessageboardsConfiguration#selectFrame" locator1="MESSAGE_BOARDS_IFRAME" />
		<execute action="PGMessageboardsConfiguration#assertClick" locator1="SETUP_NAVIGATION_MESSAGE_UPDATED_EMAIL" value1="Message Updated Email" />

		<if>
			<equals arg1="${messageUpdatedEmailEnabled}" arg2="false" />
			<then>
				<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#uncheck" locator1="MESSAGE_UPDATED_EMAIL_ENABLED_CHECKBOX" />
			</then>
			<else>
				<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#assertChecked" locator1="MESSAGE_UPDATED_EMAIL_ENABLED_CHECKBOX" />
			</else>
		</if>

		<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
	</command>

	<command name="configureScopePG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGMessageboardsConfiguration#selectFrame" locator1="MESSAGE_BOARDS_IFRAME" />
		<execute action="PGMessageboardsConfiguration#assertClick" locator1="NAVIGATION_SCOPE" value1="Scope" />

		<var name="key_scopeName" value="${scopeName}" />

		<execute action="PGMessageboardsConfigurationScope#click" locator1="SCOPE_DROPDOWN" />
		<execute action="PGMessageboardsConfigurationScope#assertClick" locator1="SCOPE_MENULIST" value1="${scopeName}" />
		<execute action="PGMessageboardsConfigurationScope#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
	</command>

	<command name="tearDownConfigurationEmailPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="PGMessageboardsConfiguration#selectFrame" locator1="MESSAGE_BOARDS_IFRAME" />
		<execute action="PGMessageboardsConfiguration#assertClick" locator1="SETUP_NAVIGATION_MESSAGE_ADDED_EMAIL" value1="Message Added Email" />

		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#check" locator1="MESSAGE_ADDED_EMAIL_ENABLED_CHECKBOX" />
		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertClick" locator1="SAVE_BUTTON" value1="Save" />

		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGMessageboardsConfigurationSetupMessageAddedEmail#assertClick" locator1="SETUP_NAVIGATION_MESSAGE_UPDATED_EMAIL" value1="Message Updated Email" />

		<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#check" locator1="MESSAGE_UPDATED_EMAIL_ENABLED_CHECKBOX" />
		<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#assertClick" locator1="SAVE_BUTTON" value1="Save" />

		<execute action="PGMessageboardsConfigurationSetupMessageUpdatedEmail#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
	</command>

	<command name="unbanUserPG">
		<execute action="PGMessageboards#assertClick" locator1="NAVIGATION_BANNED_USERS" value1="Banned Users" />

		<var name="key_userScreenName" value="${userScreenName}" />

		<execute action="PGMessageboardsBannedusers#assertClick" locator1="BANNED_USERS_TABLE_UNBAN_THIS_USER" value1="Unban This User" />
		<execute action="PGMessageboardsBannedusers#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="PGMessageboardsBannedusers#assertElementNotPresent" locator1="BANNED_USERS_TABLE_BANNED_USER" />
		<execute action="PGMessageboardsBannedusers#assertTextNotPresent" value1="${userScreenName}" />
	</command>

	<command name="viewBannedUserPG">
		<execute action="PGMessageboards#assertClick" locator1="NAVIGATION_BANNED_USERS" value1="Banned Users" />

		<var name="key_userScreenName" value="${userScreenName}" />

		<execute action="PGMessageboardsBannedusers#assertTextEquals" locator1="BANNED_USERS_TABLE_BANNED_USER" value1="${userScreenName}" />
		<execute action="PGMessageboardsBannedusers#assertTextEquals" locator1="BANNED_USERS_TABLE_BANNED_BY" value1="Test Test" />
		<execute action="PGMessageboardsBannedusers#assertVisible" locator1="BANNED_USERS_TABLE_BAN_DATE"  />
		<execute action="PGMessageboardsBannedusers#assertVisible" locator1="BANNED_USERS_TABLE_UNBAN_DATE"  />
		<execute action="PGMessageboardsBannedusers#assertTextEquals" locator1="BANNED_USERS_TABLE_UNBAN_THIS_USER" value1="Unban This User" />
		<execute action="PGMessageboardsBannedusers#assertClick" locator1="BANNED_USERS_TABLE_BANNED_USER" value1="${userScreenName}" />

		<execute action="Home#assertTextEquals" locator1="SITE_NAME" value1="${userScreenName}" />
	</command>

	<command name="viewBanPG">
		<execute action="PGMessageboards#assertTextEquals" locator1="ERROR_MESSAGE" value1="You have been banned by the moderator." />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="ADD_CATEGORY_BUTTON" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="POST_NEW_THREAD_BUTTON" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="RSS_LINK" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="SUBSCRIBE_LINK" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_MESSAGE_BOARDS_HOME" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_RECENT_POSTS" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_MY_POSTS" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_MY_SUBSCRIPTIONS" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_STATISTICS" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_BANNED_USERS" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_SEARCH_FIELD" />
		<execute action="PGMessageboards#assertElementNotPresent" locator1="NAVIGATION_SEARCH_BUTTON" />
	</command>

	<command name="viewNoPermissionCP">
		<execute action="CPMessageboards#assertTextEquals" locator1="PORTLET_TITLE" value1="Message Boards" />
		<execute action="CPMessageboards#assertElementPresent" locator1="NAVBAR_CONTAINER" />
		<execute action="CPMessageboards#assertTextEquals" locator1="INFO_MESSAGE_THREAD" value1="There are no threads in this category." />
	</command>
</definition>