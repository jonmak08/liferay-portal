<definition>
	<command name="assertDefaultPG">
		<for list="${roleList}" param="roleName" >
			<var name="roleName" value="${roleName}" />

			<var name="key_roleName" value="${roleName?replace(' ', '-')}" />
			<var name="key_roleName" value="${key_roleName?lowercase()}" />

			<if>
				<or>
					<equals arg1="${roleName}" arg2="Guest" />
					<equals arg1="${roleName}" arg2="Site Member" />
				</or>
				<then>
					<execute action="Permissions#assertNotChecked" locator1="CONFIGURATION_PERMISSIONS_ADD_TO_PAGE_CHECKBOX" />
				</then>
				<else>
					<execute action="Permissions#assertChecked" locator1="CONFIGURATION_PERMISSIONS_ADD_TO_PAGE_CHECKBOX" />
				</else>
			</if>

			<if>
				<or>
					<equals arg1="${roleName}" arg2="Guest" />
					<equals arg1="${roleName}" arg2="Power User" />
					<equals arg1="${roleName}" arg2="Site Member" />
					<equals arg1="${roleName}" arg2="User" />
				</or>
				<then>
					<execute action="Permissions#assertNotChecked" locator1="CONFIGURATION_PERMISSIONS_CONFIGURATION_CHECKBOX" />
					<execute action="Permissions#assertNotChecked" locator1="CONFIGURATION_PERMISSIONS_PERMISSIONS_CHECKBOX" />
					<execute action="Permissions#assertNotChecked" locator1="CONFIGURATION_PERMISSIONS_ACCESS_IN_CONTROL_PANEL_CHECKBOX" />
				</then>
				<else>
					<execute action="Permissions#assertChecked" locator1="CONFIGURATION_PERMISSIONS_CONFIGURATION_CHECKBOX" />
					<execute action="Permissions#assertChecked" locator1="CONFIGURATION_PERMISSIONS_PERMISSIONS_CHECKBOX" />
					<execute action="Permissions#assertChecked" locator1="CONFIGURATION_PERMISSIONS_ACCESS_IN_CONTROL_PANEL_CHECKBOX" />
				</else>
			</if>

			<if>
				<or>
					<equals arg1="${roleName}" arg2="Power User" />
					<equals arg1="${roleName}" arg2="User" />
				</or>
				<then>
					<execute action="Permissions#assertNotChecked" locator1="CONFIGURATION_PERMISSIONS_VIEW_CHECKBOX" />
				</then>
				<else>
					<execute action="Permissions#assertChecked" locator1="CONFIGURATION_PERMISSIONS_VIEW_CHECKBOX" />
				</else>
			</if>
		</for>
	</command>

	<command name="gotoBlogsConfiguration">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGBlogs#click" locator1="OPTIONS" />
		<execute action="PGBlogs#assertClick" locator1="OPTIONS_MENULIST_CONFIGURATION" value1="Configuration" />

		<execute action="PGBlogsConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />
		<execute action="PGBlogsConfiguration#assertClick" locator1="NAVIGATION_PERMISSIONS" value1="Permissions" />
	</command>

	<command name="gotoBlogsEntryCP">
		<execute macro="Page#gotoContentCP">
			<var name="pageName" value="${pageName}" />
			<var name="portletName" value="${portletName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<var name="key_entryTitle" value="${entryTitle}" />

		<execute action="CPBlogs#assertClick" locator1="ENTRY_TABLE_ACTIONS" value1="Actions" />
		<execute action="CPBlogs#assertClick" locator1="ENTRY_MENULIST_PERMISSIONS" value1="Permissions" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
	</command>

	<command name="gotoBlogsEntryPG">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<var name="key_entryTitle" value="${entryTitle}" />

		<execute action="PGBlogs#assertClick" locator1="ENTRY_PERMISSIONS" value1="Permissions" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
	</command>

	<command name="gotoBlogsPG">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<execute action="PGBlogs#assertClick" locator1="PERMISSIONS_BUTTON" value1="Permissions" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
	</command>

	<command name="gotoConfigurationPG">
		<execute macro="Portlet#gotoPortletOptions">
			<var name="portletOption" value="Configuration" />
		</execute>

		<execute action="BasePortletConfiguration#selectFrame" locator1="CONFIGURATION_IFRAME" />
		<execute action="BasePortletConfiguration#assertClick" locator1="NAVIGATION_PERMISSIONS" value1="Permissions" />
	</command>

	<command name="gotoDMFolderPG">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<var name="key_dmFolderName" value="${dmFolderName}" />

		<execute action="PGDocumentsandmedia#click" locator1="ENTRY_ICON_FOLDER_ACTIONS" />
		<execute action="PGDocumentsandmedia#assertClick" locator1="FOLDER_MENULIST_PERMISSIONS" value1="Permissions" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
	</command>

	<command name="gotoDocumentsAndMediaPG">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<execute action="PGDocumentsandmedia#click" locator1="FILTER_HOME_ACTIONS" />
		<execute action="PGDocumentsandmedia#assertClick" locator1="HOME_MENULIST_PERMISSIONS" value1="Permissions" />

		<if>
			<condition action="Permissions#isElementPresent" locator1="PERMISSIONS_IFRAME" />
			<then>
				<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
			</then>
		</if>
	</command>

	<command name="gotoPagePG">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="${siteURLTemp}" />
		</execute>

		<if>
			<condition action="SOUserBar#isElementPresent" locator1="USER_BAR" />
			<then>
				<if>
					<condition action="SOUserBar#isElementNotPresent" locator1="VISIBLE_PAGE_CONTROLS" />
					<then>
						<execute action="SOUserBar#click" locator1="TOGGLE_DOCKBAR" />
					</then>
				</if>
			</then>
		</if>

		<execute action="Dockbar#click" locator1="EDIT" />
		<execute action="Dockbar#click" locator1="EDIT_PERMISSIONS" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
	</command>

	<command name="gotoWCArticle">
		<var name="key_webContentTitle" value="${webContentTitle}" />

		<execute action="CPWebcontent#mouseOver" locator1="ENTRY_DESCRIPTIVE_THUMBNAIL" />
		<execute action="CPWebcontent#assertClick" locator1="ENTRY_DESCRIPTIVE_MENULIST_ARROW" />
		<execute action="CPWebcontent#assertClick" locator1="ENTRY_MENULIST_PERMISSIONS" value1="Permissions" />

		<execute action="Permissions#selectFrame" locator1="PERMISSIONS_IFRAME" />
		<execute action="Permissions#assertTextEquals" locator1="HEADER_TITLE" value1="${webContentTitle}" />
	</command>

	<command name="removeViewPermissionFromAllRoles">
		<for list="${roleList}" param="roleName" >
			<var name="roleName" value="${roleName}" />

			<var name="key_roleName" value="${roleName?replace(' ', '-')}" />
			<var name="key_roleName" value="${key_roleName?lowercase()}" />

			<execute action="Permissions#uncheck" locator1="CONFIGURATION_PERMISSIONS_VIEW_CHECKBOX" />
		</for>

		<execute action="Permissions#assertClick" locator1="SAVE_BUTTON" value1="Save" />
		<execute action="Permissions#assertTextEquals" locator1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="viewPermissionsRemoved">
		<var name="key_roleName" value="${roleName?replace(' ', '-')}" />
		<var name="key_roleName" value="${key_roleName?lowercase()}" />

		<execute action="Permissions#assertNotChecked" locator1="${permissionDefinitionKey}" />
	</command>
</definition>