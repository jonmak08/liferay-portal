<definition>
	<command name="disablePortletBorders">
		<execute macro="SOPortlet#gotoPortletOptions">
			<var name="portletName" value="${portletName}" />
			<var name="portletOption" value="Look and Feel" />
		</execute>

		<execute action="BasePortlet#select" locator1="PORTLET_CONFIGURATION_SHOW_BORDERS_SELECT" value1="No" />
		<execute action="BasePortlet#assertClick" locator1="PORTLET_CONFIGURATION_SAVE_BUTTON" value1="Save" />
		<execute action="BasePortlet#assertTextEquals" locator1="PORTLET_CONFIGURATION_SUCCESS_MESSAGE" value1="Your request processed successfully." />
		<execute action="BasePortlet#selectFrameTop" />
	</command>

	<command name="enablePortletBorders">
		<execute macro="SOPortlet#gotoPortletOptions">
			<var name="portletName" value="${portletName}" />
			<var name="portletOption" value="Look and Feel" />
		</execute>

		<execute action="BasePortlet#select" locator1="PORTLET_CONFIGURATION_SHOW_BORDERS_SELECT" value1="Yes" />
		<execute action="BasePortlet#assertClick" locator1="PORTLET_CONFIGURATION_SAVE_BUTTON" value1="Save" />
		<execute action="BasePortlet#assertTextEquals" locator1="PORTLET_CONFIGURATION_SUCCESS_MESSAGE" value1="Your request processed successfully." />
		<execute action="BasePortlet#selectFrameTop" />
	</command>

	<command name="gotoPortletOptions">
		<execute macro="SOUserBar#showEditControls" />

		<var name="key_portletName" value="${portletName}" />

		<if>
			<equals arg1="${portletName}" arg2="Blogs" />
			<then>
				<execute action="SOBlogs#makeVisible" locator1="BLOGS_PORTLET_CONFIGURATION_BAR" />
				<execute action="SOBlogs#click" locator1="BLOGS_PORTLET_OPTIONS_ICON" />
			</then>
			<elseif>
				<equals arg1="${portletName}" arg2="Members" />
				<then>
					<execute action="SOMembersPortlet#makeVisible" locator1="MEMBERS_PORTLET_CONFIGURATION_BAR" />
					<execute action="SOMembersPortlet#click" locator1="MEMBERS_PORTLET_OPTIONS_ICON" />
				</then>
			</elseif>
			<elseif>
				<condition action="BasePortlet#isElementPresent" locator1="SPECIFIC_PORTLET_BORDERLESS_BAR" />
				<then>
					<execute action="BasePortlet#makeVisible" locator1="SPECIFIC_PORTLET_BORDERLESS_BAR" />
					<execute action="BasePortlet#click" locator1="SPECIFIC_PORTLET_BORDERLESS_OPTIONS_ICON" />
				</then>
			</elseif>
			<else>
				<execute action="BasePortlet#assertClick" locator1="SPECIFIC_PORTLET_OPTIONS_ICON" value1="Options" />
			</else>
		</if>

		<if>
			<equals arg1="${portletOption}" arg2="Look and Feel" />
			<then>
				<execute action="BasePortlet#assertClick" locator1="OPTIONS_MENULIST_LOOK_AND_FEEL" value1="Look and Feel" />
			</then>
			<elseif>
				<equals arg1="${portletOption}" arg2="Configuration" />
				<then>
					<execute action="BasePortlet#assertClick" locator1="OPTIONS_MENULIST_CONFIGURATION" value1="Configuration" />
				</then>
			</elseif>
			<elseif>
				<equals arg1="${portletOption}" arg2="Export / Import" />
				<then>
					<execute action="BasePortlet#assertClick" locator1="OPTIONS_MENULIST_EXPORT_IMPORT" value1="Export / Import" />
				</then>
			</elseif>
			<else>
				<fail message="Invalid var portletOption. Must be (Look and Feel|Configuration|Export / Import)." />
			</else>
		</if>
	</command>
</definition>