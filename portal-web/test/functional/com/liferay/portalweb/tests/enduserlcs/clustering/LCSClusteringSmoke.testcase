<definition component-name="liferay-connected-services-project-administration">
	<property name="portlet.plugins.includes" value="lcs-portlet" />
	<property name="testray.main.component.name" value="Liferay Connected Services" />
	<property name="cluster.enabled" value="true" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute function="Click" locator1="LCSPortalNavigation#NAVIGATION_MENU_DASHBOARD" />

		<execute macro="LCSEnvironment#tearDown" />
	</tear-down>

	<command name="Smoke" priority="5">
		<property name="app.server.bundles.size" value="1" />

		<execute macro="Page#assertNodePortPG">
			<var name="nodePort" value="8080" />
		</execute>

		<execute macro="LCSServerRegistration#connectToLCSPortal">
			<var name="addEnvironment" value="true" />
			<var name="environmentDescription" value="Environment 1 Description" />
			<var name="environmentLocation" value="Environment 1 Location" />
			<var name="environmentName" value="Environment 1 Name" />
			<var name="projectName" value="Liferay QA" />
			<var name="registerAllClusterNodes" value="true" />
			<var name="serverDescription" value="Environment 1 Server 1 Description" />
			<var name="serverLocation" value="Environment 1 Server 1 Location" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
			<var method="TestPropsUtil#get('lcs.email.address.1')" name="userEmailAddress" />
			<var method="TestPropsUtil#get('lcs.email.password.1')" name="userEmailPassword" />
		</execute>

		<execute macro="LCSEnvironmentNavigator#gotoEnvironmentDetails">
			<var name="environmentName" value="Environment 1 Name" />
		</execute>

		<execute macro="LCSEnvironment#viewEnvironmentDetails">
			<var name="environmentDescription" value="Environment 1 Description" />
			<var name="environmentLocation" value="Environment 1 Location" />
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverClusterEnabled" value="true" />
		</execute>

		<execute macro="LCSServerNavigator#gotoServerDetails">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
		</execute>

		<execute macro="LCSServer#viewServerDetails">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverDescription" value="Environment 1 Server 1 Description" />
			<var name="serverLocation" value="Environment 1 Server 1 Location" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
		</execute>

		<execute macro="LCSPortalNavigator#gotoDashboard" />

		<execute macro="LCSEnvironmentNavigator#gotoEnvironment">
			<var name="environmentName" value="Environment 1 Name" />
		</execute>

		<var name="key_positionValue" value="2" />

		<var locator="LCSPortalNavigation#NAVIGATION_MENU_SERVER_SPECIFIC" name="serverName2" />

		<execute macro="User#loginPG">
			<var name="nodePort" value="9080" />
			<var name="password" value="test" />
			<var name="userEmailAddress" value="test@liferay.com" />
		</execute>

		<execute macro="Page#assertNodePortPG">
			<var name="nodePort" value="9080" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Liferay Connected Services" />
			<var name="virtualHostsURL" value="http://localhost:9080" />
		</execute>

		<execute macro="LCSPortlet#viewCluster" />

		<execute macro="LCSPortletNavigator#gotoProjectHome">
			<var name="projectName" value="Liferay QA" />
			<var method="TestPropsUtil#get('lcs.email.address.1')" name="userEmailAddress" />
			<var method="TestPropsUtil#get('lcs.email.password.1')" name="userEmailPassword" />
		</execute>

		<execute macro="LCSEnvironmentNavigator#gotoEnvironmentDetails">
			<var name="environmentName" value="Environment 1 Name" />
		</execute>

		<execute macro="LCSEnvironment#viewEnvironmentDetails">
			<var name="environmentDescription" value="Environment 1 Description" />
			<var name="environmentLocation" value="Environment 1 Location" />
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverClusterEnabled" value="true" />
		</execute>

		<execute macro="LCSServerNavigator#gotoServerDetails">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverName" value="${serverName2}" />
		</execute>

		<execute macro="LCSServer#editServerDetails">
			<var name="serverDescriptionEdit" value="Environment 1 Server 2 Description" />
			<var name="serverLocationEdit" value="Environment 1 Server 2 Location" />
			<var name="serverNameEdit" value="Environment 1 Server 2 Name" />
		</execute>

		<execute macro="LCSServer#viewServerDetails">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverDescription" value="Environment 1 Server 2 Description" />
			<var name="serverLocation" value="Environment 1 Server 2 Location" />
			<var name="serverName" value="Environment 1 Server 2 Name" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Liferay Connected Services" />
			<var name="virtualHostsURL" value="http://localhost:9080" />
		</execute>

		<execute macro="LCSPortlet#viewRegisteredServer">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="projectName" value="Liferay QA" />
			<var name="serverClusterEnabled" value="true" />
			<var name="serverConnectionStatus" value="Connected" />
			<var name="serverDescription" value="Environment 1 Server 2 Description" />
			<var name="serverLocation" value="Environment 1 Server 2 Location" />
			<var name="serverName" value="Environment 1 Server 2 Name" />
		</execute>
	</command>
</definition>