<definition component-name="liferay-connected-services-fix-packs">
	<property name="portlet.plugins.includes" value="lcs-portlet" />
	<property name="testray.main.component.name" value="Liferay Connected Services" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<command name="DownloadAndInstallFixpack" priority="5">
		<execute macro="LCSServerRegistration#connectToLCSPortal">
			<var name="addEnvironment" value="true" />
			<var name="environmentDescription" value="Environment 1 Description" />
			<var name="environmentLocation" value="Environment 1 Location" />
			<var name="environmentName" value="Environment 1 Name" />
			<var name="projectName" value="Liferay QA" />
			<var name="serverDescription" value="Environment 1 Server 1 Description" />
			<var name="serverLocation" value="Environment 1 Server 1 Location" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
			<var name="userEmailAddress" property-value="lcs.email.address.1" />
			<var name="userEmailPassword" property-value="lcs.email.password.1" />
		</execute>

		<execute macro="LCSFixpack#waitForFixpacksToDisplay" />

		<var method="selenium#getText('//div[@class=\'lcs-available-fix-packs-container\']//tr/td[2]/a')" name="fixpackName" />

		<var method="selenium#getText('//div[@class=\'lcs-navigation-submenu\']//a//span[@class=\'patches-count\']')" name="patchesCount" />

		<execute macro="LCSFixpack#viewFixpackViaDashboard">
			<var name="fixpackEnvironment" value="Environment 1 Name" />
			<var name="fixpackLocation" value="Environment 1 Server 1 Location" />
			<var name="fixpackName" value="${fixpackName}" />
			<var name="fixpackServer" value="Environment 1 Server 1 Name" />
			<var name="fixpackStatus" value="Available" />
		</execute>

		<execute macro="LCSEnvironmentNavigator#gotoEnvironment">
			<var name="environmentName" value="Environment 1 Name" />
		</execute>

		<execute macro="LCSFixpack#viewFixpackViaEnvironment">
			<var name="fixpackLocation" value="Environment 1 Server 1 Location" />
			<var name="fixpackName" value="${fixpackName}" />
			<var name="fixpackServer" value="Environment 1 Server 1 Name" />
			<var name="fixpackStatus" value="Available" />
		</execute>

		<execute macro="LCSServerNavigator#gotoServer">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
		</execute>

		<execute macro="LCSFixpack#viewFixpackViaServerAvailable">
			<var name="fixpackName" value="${fixpackName}" />
			<var name="fixpackStatus" value="Available" />
		</execute>

		<execute macro="LCSFixpack#viewNoFixpackViaServerInstalled">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>

		<execute macro="LCSServerNavigator#gotoFixpacksAvailable" />

		<execute macro="LCSFixpack#downloadFixpack">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>

		<execute macro="Portlet#shutdownServer" />

		<execute macro="Portlet#startServer" />

		<execute macro="Page#openURL">
			<var name="virtualHostsURL" value="http://localhost:8080" />
		</execute>

		<execute macro="User#firstLoginPG" />

		<var name="patchesCount" value="1" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Liferay Connected Services" />
		</execute>

		<execute macro="LCSPortletNavigator#gotoProjectHome">
			<var name="projectName" value="Liferay QA" />
			<var name="userEmailAddress" property-value="lcs.email.address.1" />
			<var name="userEmailPassword" property-value="lcs.email.password.1" />
		</execute>

		<execute macro="LCSFixpack#viewFixpackCountAfterPatchInstallation">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="patchesCount" value="${patchesCount}" />
		</execute>

		<execute macro="LCSFixpack#viewNoFixpackViaDashboard">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>

		<execute macro="LCSEnvironmentNavigator#gotoEnvironment">
			<var name="environmentName" value="Environment 1 Name" />
		</execute>

		<execute macro="LCSFixpack#viewNoFixpackViaEnvironment">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>

		<execute macro="LCSServerNavigator#gotoServer">
			<var name="environmentName" value="Environment 1 Name" />
			<var name="serverName" value="Environment 1 Server 1 Name" />
		</execute>

		<execute macro="LCSFixpack#viewNoFixpackViaServerAvailable">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>

		<execute macro="LCSFixpack#viewFixpackViaServerInstalled">
			<var name="fixpackName" value="${fixpackName}" />
		</execute>
	</command>
</definition>