<definition component-name="portal-plugins-deployment">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Plugin Installer" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#addPG">
			<var name="pageName" value="Test Page" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="SocialNetworkingPortletSmoke" priority="5">
		<property name="portlet.plugins.includes" value="social-networking-portlet" />

		<var name="appName" value="Social Networking" />

		<execute macro="Page#gotoMyDashboard" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Friends" />
		</execute>

		<execute macro="Page#gotoMyDashboard" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Friends' Activities" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Map" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Meetups" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Members" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Members' Activities" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Requests" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Summary" />
		</execute>

		<execute macro="Page#gotoMyDashboard" />

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Wall" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute macro="AppManager#uninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="App Manager" />
		</execute>

		<execute macro="AppManager#viewUninstallAppCP">
			<var name="appName" value="${appName}" />
		</execute>
	</command>
</definition>