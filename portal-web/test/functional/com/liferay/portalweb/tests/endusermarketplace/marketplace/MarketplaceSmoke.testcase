<definition component-name="marketplace">
	<property name="community.app.acceptance" value="true" />
	<property name="portlet.plugins.includes" value="calendar-portlet" />
	<property name="testray.main.component.name" value="Marketplace" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="BlogsEntry#tearDownCP" />

		<execute macro="BookmarksFolder#tearDownCP" />

		<execute macro="DMDocument#tearDownCP" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute function="Type" locator1="CPSites#BASIC_SEARCH_FIELD" value1="Site Name" />

		<execute function="AssertClick#assertTextClickAtAndWait" locator1="CPSites#BASIC_SEARCH_BUTTON" value1="Search" />

		<if>
			<condition function="IsElementPresent" locator1="CPSites#SITE_TABLE_ACTIONS_GENERIC" />
			<then>
				<execute macro="Page#gotoPG" >
					<var name="pageName" value="Calendar Test Page" />
					<var name="siteName" value="Site Name" />
					<var name="siteURL" value="true" />
				</execute>
			</then>
			<else>
				<execute macro="Page#gotoPG" >
					<var name="pageName" value="Calendar Test Page" />
				</execute>
			</else>
		</if>

		<if>
			<condition function="IsElementPresent" locator1="PGCalendar#SCHEDULER_EVENT_GENERIC" />
			<then>
				<execute macro="CalendarEvent#tearDown" />
			</then>
		</if>

		<execute macro="MessageboardsCategory#tearDownCP" />

		<execute macro="WikiPage#tearDownCP" />

		<execute macro="Page#tearDownPG" />

		<execute macro="Site#tearDownCP" />
	</tear-down>

	<command name="MarketplaceSmoke" priority="5">
		<execute macro="Marketplace#smoke" />
	</command>

	<command name="MarketplaceSmoke620Sites" priority="5">
		<var name="siteName" value="Site Name" />
		<var name="sitePageName" value="Public Site Page" />

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="Site#addCP">
			<var name="siteName" value="${siteName}" />
			<var name="siteType" value="Blank" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="SitePage#addCP">
			<var name="siteName" value="${siteName}" />
			<var name="sitePageName" value="${sitePageName}" />
			<var name="sitePagePrivacy" value="Public" />
		</execute>

		<execute macro="Marketplace#smoke">
			<var name="siteName" value="${siteName}" />
			<var name="siteURL" value="true" />
		</execute>
	</command>
</definition>