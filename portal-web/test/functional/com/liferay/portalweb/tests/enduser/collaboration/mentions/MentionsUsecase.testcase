<definition component-name="portal-collaboration">
	<property name="portal.release" value="true" />
	<property name="portlet.plugins.includes" value="mentions-portlet" />
	<property name="testray.main.component.name" value="Mentions" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#addPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#addCP">
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#editPasswordCP">
			<var name="password" value="password" />
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#assignRegularRoleCP">
			<var name="roleName" value="Administrator" />
			<var name="userScreenName" value="usersn" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="BlogsEntry#tearDownCP" />

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="DisableMentionsViaPortalSettings" priority="4">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="Site#addBlankCP">
			<var name="siteName" value="Site 1" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="Page#gotoUsersCP">
			<var name="portletName" value="Site Memberships" />
			<var name="siteScopeName" value="Site 1" />
		</execute>

		<execute macro="Site#addMemberCP">
			<var name="siteName" value="Site 1" />
			<var name="siteScopeName" value="Site 1" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="Site#addBlankCP">
			<var name="siteName" value="Site 2" />
		</execute>

		<execute macro="Page#gotoUsersCP">
			<var name="portletName" value="Site Memberships" />
			<var name="siteScopeName" value="Site 2" />
		</execute>

		<execute macro="Site#addMemberCP">
			<var name="siteName" value="Site 2" />
			<var name="siteScopeName" value="Site 2" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Mentions#disableMentionsViaPortalSettings" />

		<execute macro="Mentions#viewDisabledViaPortalSettings">
			<var name="siteName" value="Site 1" />
		</execute>

		<execute macro="Mentions#viewDisabledViaPortalSettings">
			<var name="siteName" value="Site 2" />
		</execute>
	</command>

	<command name="DisableMentionsViaSiteSettings" priority="4">
		<execute macro="Mentions#disableMentionsViaSiteSettings" />

		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Mentions#addDisabledMentionsViaBlogsCP">
			<var name="entryContent" value="Blogs Entry Content" />
			<var name="entryTitle" value="Blogs Entry Title" />
			<var name="mentionsUserFullName" value="userfn userln" />
			<var name="mentionsUserScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="BlogsEntry#viewPG">
			<var name="entryContent" value="Blogs Entry Content @usersn" />
			<var name="entryTitle" value="Blogs Entry Title" />
		</execute>

		<execute macro="Mentions#viewNoMention">
			<var name="mentionsUserScreenName" value="usersn" />
		</execute>
	</command>
</definition>