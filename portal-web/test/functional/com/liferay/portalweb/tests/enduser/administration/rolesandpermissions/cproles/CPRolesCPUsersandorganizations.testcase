<definition component-name="portal-permissions">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Permissions" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="User#logoutAndLoginPG">
			<var name="userLoginEmailAddress" value="test@liferay.com" />
			<var name="userLoginFullName" value="Test Test" />
		</execute>

		<execute macro="Organization#tearDownCP" />

		<execute macro="User#tearDownCP" />

		<execute macro="Role#tearDownCP" />

		<execute macro="PortalSettings#tearDownCP" />
	</tear-down>

	<command name="AddOrganizationRegRole" priority="5">
		<execute macro="Permissions#setUpRegRoleLoginUserCP">
			<var name="roleName" value="Regrole Name" />
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginEmailAddress" value="test@liferay.com" />
			<var name="userLoginFullName" value="Test Test" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Permissions#definePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_USERS_USERS_AND_ORGANIZATIONS_ACCESS_IN_CONTROL_PANEL" />
			<var name="permissionDefinitionValue" value="Access in Control Panel" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_USERS_USERS_AND_ORGANIZATIONS" />
			<var name="permissionNavigationValue" value="Users and Organizations" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute function="AssertElementNotPresent" locator1="CPUsersandorganizations#ADD" />
		<execute function="AssertTextEquals" locator1="CPUsersandorganizations#INFO_MESSAGE" value1="You do not belong to an organization and are not allowed to view other organizations." />

		<execute macro="Permissions#definePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS_ADD_ORGANIZATION" />
			<var name="permissionDefinitionValue" value="Add Organization" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS" />
			<var name="permissionNavigationValue" value="General Permissions" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute macro="Organization#addCP">
			<var name="orgName" value="Organization Name" />
			<var name="orgType" value="Regular Organization" />
		</execute>

		<execute macro="Permissions#removePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS_ADD_ORGANIZATION" />
			<var name="permissionDefinitionValue" value="Add Organization" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS" />
			<var name="permissionNavigationValue" value="General Permissions" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute function="AssertElementNotPresent" locator1="CPUsersandorganizations#ADD" />
	</command>

	<command name="AddUserRegRole" priority="5">
		<execute macro="Permissions#setUpRegRoleLoginUserCP">
			<var name="roleName" value="Regrole Name" />
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginEmailAddress" value="test@liferay.com" />
			<var name="userLoginFullName" value="Test Test" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Permissions#definePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_USERS_USERS_AND_ORGANIZATIONS_ACCESS_IN_CONTROL_PANEL" />
			<var name="permissionDefinitionValue" value="Access in Control Panel" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_USERS_USERS_AND_ORGANIZATIONS" />
			<var name="permissionNavigationValue" value="Users and Organizations" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute function="AssertTextEquals" locator1="CPUsersandorganizations#INFO_MESSAGE" value1="You do not belong to an organization and are not allowed to view other organizations." />
		<execute function="AssertElementNotPresent" locator1="CPUsersandorganizations#ADD" />

		<execute macro="Permissions#definePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS_ADD_USER" />
			<var name="permissionDefinitionValue" value="Add User" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS" />
			<var name="permissionNavigationValue" value="General Permissions" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute macro="User#addCP">
			<var name="userEmailAddress" value="userea1@liferay.com" />
			<var name="userFirstName" value="userfn1" />
			<var name="userLastName" value="userln1" />
			<var name="userScreenName" value="usersn1" />
		</execute>

		<execute macro="Permissions#removePermissionLoginUserCP">
			<var name="permissionDefinitionKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS_ADD_USER" />
			<var name="permissionDefinitionValue" value="Add User" />
			<var name="permissionNavigationKey" value="CONTROL_PANEL_GENERAL_PERMISSIONS" />
			<var name="permissionNavigationValue" value="General Permissions" />
			<var name="roleName" value="Regrole Name" />
			<var name="userLoginEmailAddress" value="userea@liferay.com" />
			<var name="userLoginFullName" value="userfn userln" />
		</execute>

		<execute macro="Page#gotoCP" />

		<execute function="AssertTextEquals" locator1="CPUsersandorganizations#INFO_MESSAGE" value1="You do not belong to an organization and are not allowed to view other organizations." />
		<execute function="AssertElementNotPresent" locator1="CPUsersandorganizations#ADD" />
	</command>
</definition>