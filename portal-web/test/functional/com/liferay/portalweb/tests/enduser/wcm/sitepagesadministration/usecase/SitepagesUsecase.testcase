<definition component-name="portal-wcm">
	<property name="testray.main.component.name" value="Site Pages Administration" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="Site#tearDownCP" />

		<execute macro="WebContent#tearDownCP" />

		<execute macro="BlogsEntry#tearDownCP" />

		<execute macro="MessageboardsThread#tearDownCP" />

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="AddSitePageXSS" priority="5">
		<var name="sitePage3Name"><![CDATA[<script>alert("Site Page 3")</script> />]]></var>

		<execute macro="Page#addPG">
			<var name="pageName" value="Site Page 1" />
		</execute>

		<execute macro="Page#addPG">
			<var name="pageName" value="Site Page 2" />
		</execute>

		<execute macro="Page#addPG">
			<var name="pageName" value="${sitePage3Name}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Site Page 2" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Web Content Display" />
		</execute>

		<execute macro="WebContent#addPGViaWCD">
			<var name="webContentContent" value="WC WebContent Content" />
			<var name="webContentTitle" value="WC WebContent Title" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${sitePage3Name}" />
		</execute>

		<var name="key_pageName" value="${sitePage3Name}" />

		<execute function="AssertTextEquals" locator1="Home#PAGE" value1="${sitePage3Name}" />
	</command>

	<command name="WebContentAdministrationSitesPagesPanel" priority="3">
		<execute macro="Page#addPG">
			<var name="componentName" value="Collaboration" />
			<var name="pageName" value="Panel Test Page" />
			<var name="pageType" value="Panel" />
			<var name="portletNameList" value="Blogs,Message Boards" />
		</execute>

		<execute macro="Page#viewPanelPortletListPG">
			<var name="componentName" value="Collaboration" />
			<var name="pageName" value="Panel Test Page" />
			<var name="portletNameList" value="Blogs,Message Boards" />
		</execute>

		<var name="key_portletName" value="Blogs" />

		<execute function="AssertClick" locator1="PGPanel#MENU_ITEM" value1="Blogs" />

		<execute macro="BlogsEntry#addPG">
			<var name="entryContent" value="This is Blog Post 1 Content" />
			<var name="entryTitle" value="Blog Post 1" />
		</execute>

		<execute macro="BlogsEntry#viewPG">
			<var name="entryContent" value="This is Blog Post 1 Content" />
			<var name="entryTitle" value="Blog Post 1" />
		</execute>

		<var name="key_portletName" value="Message Boards" />

		<execute function="AssertClick" locator1="PGPanel#MENU_ITEM" value1="Message Boards" />

		<execute macro="MessageboardsThread#addPG">
			<var name="threadBody" value="This is Message Boards Thread 1" />
			<var name="threadSubject" value="Thread 1" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Panel Test Page" />
		</execute>

		<execute function="AssertClick" locator1="PGPanel#MENU_ITEM" value1="Message Boards" />

		<execute macro="MessageboardsThread#viewPG">
			<var name="postCount" value="1" />
			<var name="threadBody" value="This is Message Boards Thread 1" />
			<var name="threadSubject" value="Thread 1" />
			<var name="userName" value="Test Test" />
		</execute>
	</command>

	<command name="WebContentAdministrationSitesPageTypes" priority="3">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Sites" />
		</execute>

		<execute macro="Site#addBlankCP">
			<var name="siteName" value="Page Type Test Site Name" />
		</execute>

		<execute macro="Page#gotoPagesCP">
			<var name="portletName" value="Site Pages" />
			<var name="siteScopeName" value="Page Type Test Site Name" />
		</execute>

		<execute macro="SitePage#addCP">
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="sitePageName" value="Blank Page" />
			<var name="sitePagePrivacy" value="Public" />
			<var name="siteScopeSelected" value="true" />
		</execute>

		<execute macro="SitePage#addCP">
			<var name="pageTypeDescription" value="Google" />
			<var name="pageTypeURL" value="https://www.google.com/" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="sitePageName" value="Link to URL Page" />
			<var name="sitePagePrivacy" value="Public" />
			<var name="sitePageType" value="Link to URL" />
			<var name="siteScopeSelected" value="true" />
		</execute>

		<execute function="AssertClick" locator1="CPSitepages#PAGE_TREE_PAGE_LINK_1" value1="Blank Page" />
		<execute function="AssertClickNoError" locator1="CPSitepages#TOOLBAR_DELETE" value1="Delete" />
		<execute function="Confirm" value1="Are you sure you want to delete the selected page?" />
		<execute function="AssertTextEquals" locator1="CPSitepages#INFO_MESSAGE_1" value1="Your request failed to complete." />
		<execute function="AssertTextEquals" locator1="CPSitepages#INFO_MESSAGE_2" value1="The first page cannot be of type Link to URL." />
		<execute function="AssertTextEquals" locator1="CPSitepages#PAGE_TREE_PAGE_LINK_1" value1="Blank Page" />

		<execute macro="SitePage#addCP">
			<var name="pageTypeDescription" value="Is California on Fire?" />
			<var name="pageTypeURL" value="http://iscaliforniaonfire.com/" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="sitePageName" value="Embedded Page" />
			<var name="sitePagePrivacy" value="Public" />
			<var name="sitePageType" value="Embedded" />
			<var name="siteScopeSelected" value="true" />
		</execute>

		<execute macro="SitePage#addCP">
			<var name="componentName" value="Community" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="sitePageName" value="Panel Page" />
			<var name="sitePagePrivacy" value="Public" />
			<var name="sitePageType" value="Panel" />
			<var name="siteScopeSelected" value="true" />
		</execute>

		<execute macro="SitePage#viewPanelPortletListCP">
			<var name="componentName" value="Community" />
			<var name="portletNameList" value="Bookmarks,Friends Directory,Invitation,My Sites,My Sites Directory,Page Comments,Page Flags,Page Ratings,Portal Directory,Site Members Directory" />
			<var name="sitePageName" value="Panel Page" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Link to URL Page" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="siteURL" value="true" />
		</execute>

		<execute function="AssertLocation" value1="https://www.google.com/" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Embedded Page" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="siteURL" value="true" />
		</execute>

		<execute function="AssertLocation" value1="http://localhost:8080/web/page-type-test-site-name/embedded-page" />

		<execute function="SelectFrame" locator1="PGEmbedded#EMBEDDED_IFRAME" />
		<execute function="AssertTextEquals#assertPartialText" locator1="PGEmbedded#EMBEDDED_SITE_TEXT" value1="Yes" />
		<execute function="AssertTextEquals#assertPartialText" locator1="PGEmbedded#EMBEDDED_SITE_TEXT" value1="updated" />
		<execute function="AssertTextEquals#assertPartialText" locator1="PGEmbedded#EMBEDDED_SITE_TEXT" value1="PDT" />
		<execute function="SelectFrameTop" value1="relative=top" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Panel Page" />
			<var name="siteName" value="Page Type Test Site Name" />
			<var name="siteURL" value="true" />
		</execute>

		<execute macro="Page#viewPanelPortletListPG">
			<var name="componentName" value="Community" />
			<var name="pageName" value="Panel Page" />
			<var name="portletNameList" value="Bookmarks,Friends Directory,Invitation,My Sites,My Sites Directory,Page Comments,Page Flags,Page Ratings,Portal Directory,Site Members Directory" />
		</execute>
	</command>
</definition>