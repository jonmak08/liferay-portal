	<command name="ViewNoWebsiteNotificationForInlineMentionsViaBlogsEntry" priority="4">
		<property name="test.smtp.server.enabled" value="true" />

		<execute macro="Page#gotoMyAccount">
			<var name="portletName" value="Account Settings" />
		</execute>

		<execute macro="User#editEmailAddressViaMyAccount">
			<var name="userEmailAddressEdit" property-value="email.address.4" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="NotificationsPortlet#gotoNotificationDelivery" />

		<execute macro="NotificationsPortlet#setUserDeliveries">
			<var name="actionType" value="mentions" />
			<var name="contentType" value="Mentions" />
			<var name="enableDelivery" value="false" />
			<var name="notificationType" value="Website" />
		</execute>

		<execute macro="Notifications#viewCount">
			<var name="notificationCount" value="0" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginUserPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="userea@liferay.com" />
		</execute>

		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Mentions#addMentionViaBlogsEntryCP">
			<var name="entryContent" value="Blogs Entry Content" />
			<var name="entryTitle" value="Blogs Entry Title" />
			<var name="mentionsUserFullName" value="Test Test" />
			<var name="mentionsUserScreenName" value="test" />
		</execute>

		<execute macro="Notifications#viewCount">
			<var name="notificationCount" value="0" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginUserPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" property-value="email.address.4" />
		</execute>

		<execute macro="Notifications#viewCount">
			<var name="notificationCount" value="0" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="BlogsEntry#viewPG">
			<var name="entryContent" value="Blogs Entry Content @test" />
			<var name="entryTitle" value="Blogs Entry Title" />
		</execute>

		<execute macro="MockMock#viewMail">
			<var name="asset" value="userfn userln Mentioned You in a Blogs Entry" />
			<var name="recipient" value="Test Test" />
			<var name="sender" value="Joe Bloggs" />
			<var name="subject" value="Blogs Entry Content @test" />
		</execute>

		<execute macro="Page#openURL" />
	</command>

