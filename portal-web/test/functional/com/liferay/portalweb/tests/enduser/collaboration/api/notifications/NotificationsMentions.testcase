		</execute>

		<execute macro="Notifications#viewCount">
			<var name="notificationCount" value="0" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="BlogsEntry#viewPG">
			<var name="entryContent" value="Blogs Entry Content @test" />
			<var name="entryTitle" value="Blogs Entry Title" />
		</execute>

		<execute macro="Gmail#login" >
			<var name="userEmailAddress" property-value="email.address.4" />
			<var name="userPassword" property-value="email.password.4" />
		</execute>

		<execute macro="Gmail#gotoHtmlMode" />

		<execute macro="Gmail#viewMail" >
			<var name="emailFromUserName" value="Joe Bloggs" />
			<var name="gmailAssetType" value="" />
			<var name="gmailMessageBody" value="Blogs Entry Content @test" />
			<var name="gmailMessageTitle" value="userfn userln Mentioned You in a Blogs Entry" />
		</execute>

		<execute macro="Gmail#tearDown">
			<var name="userEmailAddress" property-value="email.address.4" />
			<var name="userPassword" value="test" />
		</execute>
