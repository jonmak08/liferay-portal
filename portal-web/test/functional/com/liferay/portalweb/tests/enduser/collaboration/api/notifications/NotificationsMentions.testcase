	<property name="testray.main.component.name" value="Mentions" />

	<set-up>
		<execute macro="User#firstLoginPG" />

		<execute macro="Page#addPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#addCP">
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userFirstName" value="userfn" />
			<var name="userLastName" value="userln" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#editPasswordCP">
			<var name="password" value="password" />
			<var name="userEmailAddress" value="userea@liferay.com" />
			<var name="userScreenName" value="usersn" />
		</execute>

		<execute macro="Page#gotoCP">
			<var name="portletName" value="Users and Organizations" />
		</execute>

		<execute macro="User#assignRegularRoleCP">
			<var name="roleName" value="Administrator" />
			<var name="userScreenName" value="usersn" />
		</execute>
	</set-up>

	<tear-down>
		<execute macro="Notifications#tearDownUnreadNotifications" />

		<execute macro="NotificationsPortlet#tearDownUserDeliveries" />

		<execute macro="BlogsEntry#tearDownCP" />

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="ViewNotificationForInlineMentionViaBlogsEntry" priority="4">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginUserPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="userea@liferay.com" />
		</execute>

		<execute macro="Page#gotoContentCP">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Mentions#addMentionViaBlogsEntryCP">
			<var name="entryContent" value="Blogs Entry Content" />
			<var name="entryTitle" value="Blogs Entry Title" />
			<var name="mentionsUserFullName" value="Test Test" />
			<var name="mentionsUserScreenName" value="test" />
		</execute>

		<execute macro="User#logoutPG" />

		<execute macro="User#loginUserPG">
			<var name="password" value="test" />
			<var name="userEmailAddress" value="test@liferay.com" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs Page" />
		</execute>

		<execute macro="Notifications#viewCountAlert">
			<var name="notificationCount" value="1" />
		</execute>

		<execute macro="Notifications#gotoDockbar" />

		<execute macro="Notifications#viewNewInlineMention">
			<var name="assetType" value="blogs entry" />
			<var name="contentBody" value="Blogs Entry Title" />
			<var name="user" value="userfn userln" />
		</execute>

		<execute macro="Notifications#navigateToContent">
			<var name="contentBody" value="Blogs Entry Title" />
		</execute>

		<execute macro="Mentions#viewMentionTagLink">
			<var name="mentionsUserFullName" value="Test Test" />
			<var name="mentionsUserScreenName" value="test" />
		</execute>

		<execute macro="Notifications#viewCount">
			<var name="notificationCount" value="0" />
		</execute>
	</command>

