		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Documents and Media Page" />
		</execute>

		<execute macro="DMDocument#addPG">
			<var name="dmDocumentDescription" value="Basic Document with Special Characters in Title" />
			<var name="dmDocumentFile" value="Document_1.doc" />
			<var name="dmDocumentTitle" value=",./?;:[]\{}|`~!@#$%^*()_+`-=&amp;&lt;&gt;&quot; Special Characters" />
