			<var name="dmDocumentDescription" value="Basic Document with Special Characters in Title" />
			<var name="dmDocumentTitle" value=",./?;:[]\{}|`~!@#$%^*()_+`-=&amp;&lt;&gt;&quot; Special Characters" />
