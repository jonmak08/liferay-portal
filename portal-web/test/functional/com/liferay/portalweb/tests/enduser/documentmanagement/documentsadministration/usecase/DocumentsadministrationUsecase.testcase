		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Documents and Media Page" />
		</execute>

		<execute macro="DMDocument#addPG">
			<var name="categoryName" value="Category Name" />
			<var name="dmDocumentDescription" value="Document Description" />
			<var name="dmDocumentFile" value="Document_1.doc" />
			<var name="dmDocumentTitle" value="Document Title" />
			<var name="tagNameList" value="tag1,tag2" />
		</execute>

		<var name="key_dmDocumentTitle" value="Document Title" />

		<execute function="AssertClick" locator1="PGDocumentsandmedia#ENTRY_ICON_DOCUMENT_TITLE" value1="Document Title" />

		<execute function="AssertClick#assertTextClickAtAndWait" locator1="PGDocumentsandmediaDocument#TOOLBAR_EDIT_BUTTON" value1="Edit" />

		<var name="key_categoryName" value="Category Name" />

		<execute function="AssertTextEquals" locator1="PGDocumentsandmediaEditdocument#CATEGORIZATION_VOCABULARY_TAG" value1="Category Name" />

		<for list="tag1,tag2" param="tagName">
			<var name="key_categoryTag" value="${tagName}" />
			<execute function="AssertTextEquals" locator1="PGDocumentsandmediaEditdocument#CATEGORIZATION_TAG" value1="${tagName}" />
		</for>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Documents and Media Page" />
		</execute>

		<execute macro="DMDocument#viewPG">
			<var name="categoryName" value="Category Name" />
			<var name="dmDocumentDescription" value="Document Description" />
			<var name="dmDocumentTitle" value="Document Title" />
			<var name="tagNameList" value="tag1,tag2" />
		</execute>
	</command>

