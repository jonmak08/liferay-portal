<definition component-name="portal-wcm">
	<property name="testray.main.component.name" value="Content and Application Templates" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="BlogsEntry#tearDownCP" />

		<execute macro="Page#gotoConfigurationCP">
			<var name="portletName" value="Application Display Templates" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#tearDownCP" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#tearDownADTviaPortletPG">
			<var name="defaultADT" value="Full Content" />
		</execute>

		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="AddCP" priority="5">
		<execute macro="Page#gotoConfigurationCP">
			<var name="portletName" value="Application Display Templates" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#addCP">
			<var name="adtFile" value="adt_blogs_basic.ftl" />
			<var name="adtType" value="Blogs" />
		</execute>

		<execute macro="Page#addPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#viewADTviaPortletPG">
			<var name="adtType" value="Blogs" />
		</execute>
	</command>

	<command name="AddCPviaBlogs" priority="5">
		<execute macro="Page#gotoConfigurationCP">
			<var name="portletName" value="Application Display Templates" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#addCP">
			<var name="adtFile" value="adt_blogs_basic.ftl" />
			<var name="adtType" value="Blogs" />
		</execute>

		<execute macro="Page#addPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="Blogs" />
		</execute>

		<execute macro="BlogsEntry#addPG">
			<var name="entryContent" value="Blogs Entry Content" />
			<var name="entryTitle" value="Blogs Entry Title" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute macro="ApplicationDisplayTemplates#addADTviaPortletPG">
			<var name="adtType" value="Blogs" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="Blogs ADT Test Page" />
		</execute>

		<execute function="AssertElementNotPresent" locator1="PGBlogs#ENTRY_EDIT_1" value1="Edit" />
		<execute function="AssertElementNotPresent" locator1="PGBlogs#ENTRY_PERMISSIONS_1" value1="Permissions" />
		<execute function="AssertElementNotPresent" locator1="PGBlogs#ENTRY_RECYCLE_BIN_1" value1="Move to the Recycle Bin" />
	</command>
</definition>