<definition component-name="portal-wcm">
	<property name="testray.main.component.name" value="Navigation" />

	<set-up>
		<execute macro="User#firstLoginPG" />
	</set-up>

	<tear-down>
		<execute macro="Page#tearDownPG" />
	</tear-down>

	<command name="AutomaticChangesToDisplayStyle" priority="3">
		<property name="custom.properties" value="navigation.display.style.options=from-level-1-to-all-sublevels${line.separator}navigation.display.style[from-level-1-with-title]=root-layout,absolute,1,auto,true${line.separator}navigation.display.style.default=" />

		<var name="pageName" value="Navigation Display Test Page" />
		<var name="portletName" value="Navigation" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="${portletName}" />
		</execute>

		<var name="key_pageName" value="${pageName}" />

		<execute function="#assertTextEquals" locator1="PGNavigation#BREADCRUMB_HEADER2_ENTRY" value1="${pageName}" />
	</command>

	<command name="ManualChangesToDisplayStyle" priority="3">
		<property name="custom.properties" value="navigation.display.style.options=from-level-1-to-all-sublevels${line.separator}navigation.display.style[from-level-1-with-title]=root-layout,absolute,1,auto,true" />

		<var name="pageName" value="Navigation Display Test Page" />
		<var name="portletName" value="Navigation" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="${portletName}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<var name="key_pageName" value="${pageName}" />

		<execute function="#assertTextEquals" locator1="PGNavigation#BREADCRUMB_ENTRY" value1="${pageName}" />
		<execute function="#assertClick" locator1="PGNavigation#OPTIONS_ICON" value1="Options" />
		<execute function="#assertClick" locator1="PGNavigation#OPTIONS_MENULIST_CONFIGURATION" value1="Configuration" />

		<execute function="#selectFrame" locator1="PGNavigationConfiguration#NAVIGATION_CONFIGURATION_IFRAME" />
		<execute function="#assertTextEquals" locator1="PGNavigationConfiguration#PREVIEW_BREADCRUMB_HEADER2_ENTRY" value1="${pageName}" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#SETUP_DISPLAY_STYLE_SELECT" value1="Custom" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#CUSTOM_HEADER_SELECT" value1="Root Page" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#CUSTOM_ROOT_PAGE_SELECT" value1="Parent at Level" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#CUSTOM_ROOT_PAGE_LEVEL_SELECT" value1="1" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#CUSTOM_INCLUDED_PAGES_SELECT" value1="Auto" />
		<execute function="#assertSelectedLabel" locator1="PGNavigationConfiguration#CUSTOM_NESTED_CHILDREN_SELECT" value1="Yes" />
		<execute function="#assertClick" locator1="PGNavigationConfiguration#PORTLET_CONFIGURATION_SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGNavigationConfiguration#PORTLET_CONFIGURATION_SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute function="#selectFrame" value1="relative=top" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute function="#assertTextEquals" locator1="PGNavigation#BREADCRUMB_HEADER2_ENTRY" value1="${pageName}" />
	</command>

	<command name="ValidateReturnToDefaultStyle" priority="3">
		<property name="custom.properties" value="navigation.display.style.default=from-level-1-with-title${line.separator}navigation.display.style[from-level-1-with-title]=root-layout,absolute,1,auto,true" />

		<var name="pageName" value="Navigation Display Test Page" />
		<var name="portletName" value="Navigation" />

		<execute macro="Page#addPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#addPG">
			<var name="portletName" value="${portletName}" />
		</execute>

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<var name="key_pageName" value="${pageName}" />

		<execute function="#assertTextEquals" locator1="PGNavigation#BREADCRUMB_HEADER2_ENTRY" value1="${pageName}" />
		<execute function="#assertClick" locator1="PGNavigation#OPTIONS_ICON" value1="Options" />
		<execute function="#assertClick" locator1="PGNavigation#OPTIONS_MENULIST_CONFIGURATION" value1="Configuration" />

		<execute function="#selectFrame" locator1="PGNavigationConfiguration#NAVIGATION_CONFIGURATION_IFRAME" />
		<execute function="#select" locator1="PGNavigationConfiguration#SETUP_DISPLAY_STYLE_SELECT" value1="Relative with Breadcrumb" />
		<execute function="#assertClick" locator1="PGNavigationConfiguration#PORTLET_CONFIGURATION_SAVE_BUTTON" value1="Save" />
		<execute function="#assertTextEquals" locator1="PGNavigationConfiguration#PORTLET_CONFIGURATION_SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute function="#selectFrame" value1="relative=top" />

		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute function="#assertTextEquals" locator1="PGNavigation#BREADCRUMB_ENTRY" value1="${pageName}" />
	</command>
</definition>