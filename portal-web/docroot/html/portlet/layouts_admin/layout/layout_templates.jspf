<div id="<portlet:namespace />layoutTemplates">

	<%
	String value = "";

	layoutTemplates = PluginUtil.restrictPlugins(layoutTemplates, user);

	for (int i = 0; i < layoutTemplates.size(); i++) {
		LayoutTemplate layoutTemplate = layoutTemplates.get(i);

		String id = layoutTemplate.getLayoutTemplateId();

		if (layoutTemplateId.equals(id)) {
			value = id;
		}
	%>

		<span>
			<button class='btn <%= layoutTemplateId.equals(id) ? "btn-info" : "" %>' data-id="<%= id %>" data-label="<%= layoutTemplate.getName() %>" type="button">
				<img alt="" class="polaroid layout-template-entry modify-link <%= layoutTemplateId.equals(id) ? "layout-selected" : StringPool.BLANK %>" src="<%= layoutTemplate.getStaticResourcePath() %><%= layoutTemplate.getThumbnailPath() %>" />
			</button>
		</span>

	<%
	}
	%>

	<aui:input id="layoutTemplateId" name="layoutTemplateId" type="hidden" value="<%= value %>" />
</div>

<aui:script use="aui-tooltip">
	var A = AUI();

	var layoutTemplates = A.one('#<portlet:namespace />layoutTemplates');
	var layoutTemplateId = layoutTemplates.one('#<portlet:namespace />layoutTemplateId');

	layoutTemplates.delegate(
		'click',
		function(event){
			var button = this;

			layoutTemplates.all('button').removeClass('btn-info');

			button.addClass('btn-info');

			layoutTemplateId.attr('value', button.attr('data-id'));
		},
		'button'
	);

	new A.TooltipDelegate(
		{
			formatter: function() {
				var tooltip = this;

				tooltip.set('zIndex', 2);

				var node = tooltip.get('trigger');

				return node.attr('data-label');
			},
			trigger: '#<portlet:namespace />layoutTemplates button',
			visible: false
		}
	);
</aui:script>