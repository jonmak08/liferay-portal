<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.1.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_1_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.1.0+</version>
	</compatibility>
	<theme id="frontend-theme-oliv" name="Oliv">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="show-site-logo" type="checkbox" value="true" />
			<setting configurable="true" key="title-text" type="text" value="Oria Demo" />
			<setting configurable="true" key="description-text" type="text" value="Just another Liferay theme by JustFreeThemes" />
			<setting configurable="true" key="facebook-handle" type="text" />
			<setting configurable="true" key="instagram-handle" type="text" />
			<setting configurable="true" key="twitter-handle" type="text" />
			<setting configurable="true" key="linkedin-handle" type="text" />
			<setting configurable="true" key="pinterest-handle" type="text" />
			<setting configurable="false" key="show-site-name-supported" value="false" />
  		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>