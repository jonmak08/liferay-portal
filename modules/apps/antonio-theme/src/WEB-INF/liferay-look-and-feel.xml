<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="antonio" name="antonio">
		<template-extension>ftl</template-extension>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>

		<settings>
			<setting configurable="true" key="Site Name" type="text" value="Liferay"/>

			<setting configurable="true" key="Add Footer Section" type="checkbox" value="false" />
			<setting configurable="true" key="Footer Section Title" type="text" value="" />
			<setting configurable="true" key="Footer Section Entry" type="text" value="" />

			<setting configurable="true" key="Social Media One Font Awesome Class" type="text" value="" />
			<setting configurable="true" key="Social Media One Link" type="text" value="" />

			<setting configurable="true" key="Social Media Two Font Awesome Class" type="text" value="" />
			<setting configurable="true" key="Social Media Two Link" type="text" value="" />

			<setting configurable="true" key="Social Media Three Font Awesome Class" type="text" value="" />
			<setting configurable="true" key="Social Media Three Link" type="text" value="" />

			<setting configurable="true" key="Social Media Four Font Awesome Class" type="text" value="" />
			<setting configurable="true" key="Social Media Four Link" type="text" value="" />

			<setting configurable="true" key="Social Media Five Font Awesome Class" type="text" value="" />
			<setting configurable="true" key="Social Media Five Link" type="text" value="" />
		</settings>
	</theme>
</look-and-feel>
