<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="valencia-theme" name="Valencia">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="page-headline" type="text" value="" />
			<setting configurable="true" key="show-page-headline" type="checkbox" value="false" />
			<setting configurable="true" key="page-tagline" type="text" value="" />
			<setting configurable="true" key="show-page-tagline" type="checkbox" value="false" />
			<setting configurable="false" key="default-header-image-url" type="text" value="/o/valencia/images/night-sky-by-joshua-earle.jpg" />
			<setting configurable="true" key="custom-header-image-url" type="text" value="" />
			<setting configurable="true" key="show-custom-header-image" type="checkbox" value="false" />
		</settings>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
